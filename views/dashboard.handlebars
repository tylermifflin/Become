<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Dashboard</h3>

    <h4>{{quote}}</h4>
    <h6>by {{author}}</h6>  

  {{#if goal.length}}
  <div class="col-md-6 project-list">
    <h3>Current Goals:</h3>
    {{#each goal as |goal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/goal/{{goal.id}}">{{goal.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

 {{#if timecapsule.length}}
  <div class="col-md-6 project-list">
    <h3>Time Capsule:</h3>
    {{#each timecapsule as |timecapsule|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/timecapsule/{{goal.id}}">{{timecapsule.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
